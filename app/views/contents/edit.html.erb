 <div class="text-center mb-4">
  <h1 class="h3 mb-3 font-weight-normal">編集画面</h1>
  <p>記事の内容を編集してください</p>
</div>

<%= form_with(model: @content,url: user_content_path( user_id: current_user, id: @content), local: true) do |f| %>
  <%= render partial: 'shared/error_messages' ,locals: {obj: @content} %>

  <div class="form-group">
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title, value: @content.title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :url, 'URL' %>
    <%= f.text_field :url, value: @content.url,  class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :memo, 'メモ' %>
    <%= f.text_field :memo, value: @content.memo, class: 'form-control' %>
  </div>

  <%= f.hidden_field :user_id, value: params[:user_id] %>

  <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
<% end %>
