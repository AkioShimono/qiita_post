<% if logged_in? %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Qiita Post</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/users/<%= current_user.id %>">記事一覧 <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/users/<%= current_user.id %>/contents/new">新規投稿 <span class="sr-only">(current)</span></a>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item active">
          <p class="nav-link"><%= "こんにちわ#{current_user.name}さん" %></p>
        </li>
        <li  class="nav-item active">
          <%= link_to "ログアウト", logout_path, method: :delete, class:"nav-link" %>
        </li>
      </ul> 
    </div>
  </nav>

<% else %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Qiita Post</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <p class="nav-link">Qiitaのストック記事と自分の好きなURLを記録できるアプリ</p>
        </li>
      </ul>
      <ul class="navbar-nav">
        <li  class="nav-item active">
          <%= link_to "ログイン", login_path, class:"nav-link" %>
        </li>
        <li  class="nav-item active">
          <%= link_to "会員登録", new_user_path, class:"nav-link" %>
        </li>
      </ul> 
    </div>
  </nav>
<% end %>
  
